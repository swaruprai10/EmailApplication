@model EmailCampaignApp.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}


<h1>Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Contacts</h5>
                <p class="card-text">@Model.TotalContacts</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Emails Sent</h5>
                <p class="card-text">@Model.TotalSentEmails</p>
            </div>
        </div>
    </div>
</div>