@model EmailCampaignApp.Models.DeleteUserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<h2>Are you sure you want to delete the user?</h2>

<div>
    <p>Username: @Model.UserName</p>
    <p>Email: @Model.Email</p>
</div>

<form method="post" asp-action="DeleteUser" asp-route-userId="@Model.UserId">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
</form>
<a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">Cancel</a>
