                <img src="@Url.Content("~/image/main_front_logo.png")" alt="EmailCampaign logo" width="120" height="36">
                </img>
            </div>

            <!-- Registration Form Card -->
            <div class="register-card">
                <h2 class="register-title">Create your account</h2>
                <p class="register-subtitle">Join thousands of businesses already growing</p>

                <form method="post" asp-action="Register" id="registerForm">
                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- First Name Field -->
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">
                            User name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Enter your first name" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

