@{
    ViewData["Title"] = "Create New Campaign";
}
@{
    var media = "some value"; // Define 'media' here if it's a variable
}
<div class="container">
    <h2 class="text-center mb-4">Create New Campaign</h2>

    <div class="row template-gallery">
        <div class="col-md-8 template-choice">
            <div class="card" style="background-color:#d8afac ">

                <div class="card-body">
                    <h5 class="card-title">Promotion</h5>

                    <a href="@Url.Action("Template", "Home")" class="btn btn-primary">Use Template</a>
                </div>
            </div>
        </div>


    </div>
</div>

<style>
    .container {
        padding: 2rem;
    }

    .template-gallery {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }

    .template-choice {
        transition: transform 0.3s ease;
    }

    .template-choice:hover {
        transform: translateY(-5px);
    }

    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .template-preview {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .card-body {
        padding: 1.25rem;
    }

    .card-title {
        color: #333;
        margin-bottom: 0.5rem;
    }

    .card-text {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .btn-primary {
        width: 100%;
        padding: 0.5rem;
        font-weight: 500;
    }

    @media
    (max-width: 768px) {
        .template-gallery {
            flex-direction: column;
        }

        .template-choice {
            width: 100%;
            margin-bottom: 2rem;
        }
    }
</style>