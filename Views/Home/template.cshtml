            cursor: pointer;
        }

        #campaignModal button:hover {
            background-color: #45a049;
        }

        /* Responsive Design */
        @media
        (max-width: 768px) {
            .split-layout {
                flex-direction: column;
                height: auto;
                margin: 20px;
            }

            .resizer {
                width: 100%;
                height: 10px;
                cursor: row-resize;
            }

            .resizer::after {
                height: 4px;
                width: 50px;
            }

            .image-section,
