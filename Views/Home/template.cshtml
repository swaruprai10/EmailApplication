            display: flex;
            align-items: center;
            justify-content: center;
            background: #f9f9f9;
            position: relative;
            overflow: hidden;
        }

        .text-container {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .resizer {
            width: 10px;
            cursor: col-resize;
            transition: background 0.2s;
            position: relative;
        }

        .resizer:hover {
            /* background: #ddd; */
        }

        .resizer::after {
            content: '';
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            height: 50px;
            width: 4px;
            background: #ccc;
            border-radius: 2px;
        }

        #uploadedImage {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            display: none;
        }

        .upload-placeholder {
            text-align: center;
            padding: 20px;
        }

        .upload-button {
            background: #4a90e2;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s;
        }

        .upload-button:hover {
            background: #357abd;
        }

        .upload-text {
            margin-top: 10px;
            color: #666;
            font-size: 14px;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
        }

        .close {
